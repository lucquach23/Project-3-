@model PagedList.IPagedList<Model.EF.User>
@using PagedList.Mvc;
@{
	ViewBag.Title = "Quản Lý User";
	Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section header{
	Danh sách người dùng
}
<div class="row">
	<div class="col-lg-12">
		<div class="panel panel-default">
			<div class="panel-heading">
			Tổng:	@Model.Count
			</div>
			<div class="panel-body">
				@using (Html.BeginForm("Index", "User", FormMethod.Get))
				{
					<div class="row">
						<div class="col-lg-12" style="padding-bottom:20px;padding-top:10px;display:flex">
							<div class="col-md-3" style="float:left;">
								<input style="width: 245px;" type="text" name="searchString" value="@ViewBag.SearchString" />
							</div>
							<div class="col-md-3">
								<button type="submit">Tìm kiếm</button>
								
							</div>
							
						</div>
					</div>
				}
				<div class="col-md-3">
					<a href="/Admin/User/Create">Thêm mới</a>
				</div>
				<div class="table-responsive">
					<table class="table table-striped table-bordered table-hover">
						<thead>
							<tr>
								<th>Tùy chọn</th>
								<th>Tài khoản</th>
								<th>Tên</th>
								<th>Địa chỉ</th>
								<th>Email</th>
								<th>Điện thoại</th>
							</tr>
						</thead>
						<tbody>
							@foreach (var item in Model)
							{
								<tr id="row_@item.ID">
									<td>
										<a href="/Admin/User/Edit/@item.ID">Sửa</a>
										|
										@Ajax.ActionLink("Xóa", "Delete", new { @id = item.ID }, new AjaxOptions
								   {
									   Confirm = "Bạn có muốn xóa bản ghi này?",
									   OnComplete = "$('#row_" + @item.ID + "').remove()",
									   HttpMethod = "Delete"
								   })
									</td>
									<td>@item.UserName</td>
									<td>@item.Name</td>
									<td>@item.Address</td>
									<td>@item.Email</td>
									<td>@item.Phone</td>								
								</tr>
								}
						</tbody>
					</table> 
					@Html.PagedListPager(Model,page =>Url.Action("Index",new { page,@searchString=@ViewBag.SearchString}))
				</div>
			</div>
		</div>
	</div>
</div>