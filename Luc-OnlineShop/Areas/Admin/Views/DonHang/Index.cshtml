@model PagedList.IPagedList<Model.ViewModal.DonHangViewModal>
@using PagedList.Mvc;
@{
	ViewBag.Title = "Index";
	Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section header{
	Danh sách Đơn hàng
}
<div class="row">
	<div class="col-lg-12">
		<div class="panel panel-default">
			<div class="panel-heading">
				@*Tổng:	@Model.Count*@
			</div>
			<div class="panel-body">
				@using (Html.BeginForm("Index", "DonHang", FormMethod.Get))
				{
					<div class="row">
						<div class="col-lg-12" style="padding-bottom:20px;padding-top:10px;display:flex">
							<div class="col-md-3" style="float:left;">
								<input style="width: 245px;" type="text" name="searchString" value="@ViewBag.SearchString" />
							</div>
							<div class="col-md-3">
								<button type="submit">Tìm kiếm</button>

							</div>

						</div>
					</div>
				}
				<div class="col-md-3">
					<a href="/Admin/SP/Create">Thêm mới</a>
				</div>
				<div class="table-responsive">
					<table class="table table-striped table-bordered table-hover">
						<thead>
							<tr>
								<th>Tùy chọn</th>
								<th>Tên KH</th>
								<th>Địa chỉ</th>
								<th>Phone</th>
								<th>Email</th>
								@*<th>Tổng tiền</th>*@
								<th>Ngày Đặt</th>
								<th>Chi tiết</th>
							</tr>
						</thead>
						<tbody>


							@foreach (var item in Model)
							{
								<tr id="row_@item.order.ID">
									<td>
										<a href="/Admin/SP/Edit/@item.order.ID">Xác thực</a>
										|
										@Ajax.ActionLink("Xóa", "Delete", new { @id = item.order.ID }, new AjaxOptions
								   {
									   Confirm = "Bạn có muốn xóa bản ghi này?",
									   OnComplete = "$('#row_" + @item.order.ID + "').remove()",
									   HttpMethod = "Delete"
								   })
									</td>
									<td>@item.customer.TenKH</td>
									<td>@item.customer.DiaChi</td>
									<td>@item.customer.Sdt</td>
									<td>@item.customer.Email</td>
									@*<td>@item.tongTien</td>*@
									<td>@item.order.CreateDate</td>
									<td>
										<div class="container">

											<button type="button" id="myBtn-@item.customer.ID">Chi Tiết</button>

											<!-- Modal -->
											<div class="modal fade" id="myModal-@item.customer.ID" role="dialog">
												<div class="modal-dialog">

													<!-- Modal content-->
													<div class="modal-content">
														<div class="modal-header">
															@*<button type="button" class="close" data-dismiss="modal">&times;</button>*@
															<h4 class="modal-title">Chi tiết Đơn hàng</h4>
														</div>
														<div style="width:500px;height:406px;" class="modal-body">
															<table class="table table-striped">
																<thead>
																	<tr>
																		
																		<th scope="col">Tên</th>
																		<th scope="col">Ảnh </th>
																		<th scope="col">Số Lượng</th>
																		<th scope="col">Giá</th>
																		
																	</tr>
																	@*<tr>
																		<th scope="col">Tổng </th>
																	</tr>*@
																</thead>
																<tbody>
																	@foreach (var i in Model)
																	{
																		decimal tt = 0;
																		<tr>
																			<th scope="row">@i.product.Name</th>
																			<td><img style="width:50px" src="@i.product.Image"/></td>
																			<td>@i.orderdetail.Quantity</td>
																			<td>@i.product.Price</td>

																		</tr>
																			tt = tt + @i.product.Price.GetValueOrDefault(0);
																		<tr>@tt</tr>






																	}
																	
																	
																</tbody>
															</table>
														</div>
														<div class="modal-footer">
															<button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
														</div>
													</div>

												</div>
											</div>

										</div>

										<script>
																		$(document).ready(function(){
																		  $("#myBtn-@item.customer.ID").click(function(){
																			$("#myModal-@item.customer.ID").modal();
																		  });
																		});
										</script>
									</td>

								</tr>
							}


						</tbody>
					</table>
					@Html.PagedListPager(Model, page => Url.Action("Index", new { page, @searchString = @ViewBag.SearchString }))
				</div>
			</div>
		</div>
	</div>
</div>




