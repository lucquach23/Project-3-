@model PagedList.IPagedList<Model.EF.DonHang>
@using PagedList.Mvc;
@{
	ViewBag.Title = "DH";
	Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section header{
	Danh sách Đơn hàng kH
}
<div class="row">
	<div class="col-lg-12">
		<div class="panel panel-default">
			<div class="panel-heading">
				@*Tổng:	@Model.Count*@
			</div>
			<div class="panel-body">
				@using (Html.BeginForm("Index", "DH", FormMethod.Get))
				{
					<div class="row">
						<div class="col-lg-12" style="padding-bottom:20px;padding-top:10px;display:flex">
							<div class="col-md-3" style="float:left;">
								<input style="width: 245px;" type="text" name="searchString" value="@ViewBag.SearchString" />
							</div>
							<div class="col-md-3">
								<button type="submit">Tìm kiếm</button>

							</div>

						</div>
					</div>
				}
				<div class="col-md-3">
					<a href="/Admin/SP/Create">Thêm mới</a>
				</div>
				<div class="table-responsive">
					<table class="table table-striped table-bordered table-hover">
						<thead>
							<tr>
								<th>Tùy chọn</th>
								<th>Tên KH</th>
								<th>Địa chỉ</th>
								<th>Phone</th>
								<th>Email</th>
								<th>Tổng tiền</th>
								<th>Ngày Đặt</th>
								<th>Trạng thái</th>
								<th>Chi tiết</th>
							</tr>
						</thead>
						<tbody>


							@foreach (var item in Model)
							{
								<tr id="row_@item.CustomerID">
									<td>
										<a href="/Admin/SP/Edit/@item.CustomerID">Xác thực</a>
										|
										@Ajax.ActionLink("Xóa", "Delete", new { @id = item.CustomerID }, new AjaxOptions
								   {
									   Confirm = "Bạn có muốn xóa bản ghi này?",
									   OnComplete = "$('#row_" + @item.CustomerID + "').remove()",
									   HttpMethod = "Delete"
								   })
									</td>
									<td>@item.tenKH</td>
									<td>@item.DiaChi</td>
									<td>@item.Sdt</td>
									<td>@item.Email</td>
									<td>@item.TotalMoney</td>
									<td>@item.NgayGuiDon</td>
									<td>@item.Status</td>
									<td></td>

								</tr>
							}


						</tbody>
					</table>
					@Html.PagedListPager(Model, page => Url.Action("Index", new { page, @searchString = @ViewBag.SearchString }))
				</div>
			</div>
		</div>
	</div>
</div>




